{
  "compilerOptions": {
    "target": "ES2015",
    "module": "node16",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    /** @see https://github.com/Microsoft/TypeScript/issues/26238 */
    "noErrorTruncation": true
  }
}
